# Agent System Configuration

# REQUIRED: Anthropic API Key
ANTHROPIC_API_KEY=your-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Model Configuration
PM_MODEL=claude-3-5-sonnet-20241022
VALIDATOR_MODEL=claude-3-5-sonnet-20241022
INTEGRATOR_MODEL=claude-3-5-sonnet-20241022
QA_MODEL=claude-3-opus-20240229

# Agent Configuration
PM_AGENT_COUNT=3
MAX_ITERATIONS_PER_PRP=10
QA_TIMEOUT_SECONDS=300

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=30

# Monitoring Configuration
MONITOR_INTERVAL_SECONDS=10
STUCK_PRP_THRESHOLD_MINUTES=30
AGENT_INACTIVE_THRESHOLD_MINUTES=5

# Cost Monitoring
ENABLE_COST_TRACKING=true
DAILY_COST_LIMIT=100.0

# Logging
LOG_LEVEL=INFO