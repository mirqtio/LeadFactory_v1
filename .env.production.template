# LeadFactory Production Environment Template
# Copy this to .env.production and fill with real values
# DO NOT COMMIT .env.production

# Environment
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=<GENERATE-STRONG-SECRET-KEY>

# Database (use strong password)
DATABASE_URL=postgresql://leadfactory:<STRONG-DB-PASSWORD>@db:5432/leadfactory
DB_PASSWORD=<STRONG-DB-PASSWORD>
POSTGRES_USER=leadfactory
POSTGRES_PASSWORD=<STRONG-DB-PASSWORD>
POSTGRES_DB=leadfactory

# Redis
REDIS_URL=redis://redis:6379/0

# API Configuration
USE_STUBS=false
STUB_BASE_URL=http://stub-server:5010

# External API Keys (REQUIRED)
GOOGLE_API_KEY=<YOUR-REAL-GOOGLE-API-KEY>
GOOGLE_PLACES_API_KEY=<YOUR-REAL-GOOGLE-PLACES-KEY>
GOOGLE_PAGESPEED_API_KEY=<YOUR-REAL-PAGESPEED-KEY>
STRIPE_SECRET_KEY=<YOUR-REAL-STRIPE-SECRET-KEY>
STRIPE_PUBLISHABLE_KEY=<YOUR-REAL-STRIPE-PUBLISHABLE-KEY>
STRIPE_WEBHOOK_SECRET=<YOUR-REAL-STRIPE-WEBHOOK-SECRET>
STRIPE_PRICE_ID=<YOUR-REAL-STRIPE-PRICE-ID>
SENDGRID_API_KEY=<YOUR-REAL-SENDGRID-API-KEY>
OPENAI_API_KEY=<YOUR-REAL-OPENAI-API-KEY>
OPENAI_MODEL=gpt-4o-mini

# PRD v1.2 API Keys
DATA_AXLE_API_KEY=<YOUR-REAL-DATA-AXLE-KEY>
SEMRUSH_API_KEY=<YOUR-REAL-SEMRUSH-KEY>
SCREENSHOTONE_KEY=<YOUR-REAL-SCREENSHOTONE-KEY>
HUNTER_API_KEY=<YOUR-REAL-HUNTER-KEY>

# Quotas and Limits
MAX_DAILY_EMAILS=100000

# Email Settings
FROM_EMAIL=noreply@leadfactory.com
FROM_NAME=LeadFactory

# Cost Control
COST_BUDGET_USD=1000.0

# Feature Flags
ENABLE_ENRICHMENT=true
ENABLE_LLM_INSIGHTS=true
ENABLE_EMAIL_TRACKING=true
ENABLE_EXPERIMENTS=false
PROVIDERS_DATA_AXLE_ENABLED=true
PROVIDERS_HUNTER_ENABLED=true
PROVIDERS_SEMRUSH_ENABLED=true
PROVIDERS_SCREENSHOTONE_ENABLED=true
ENABLE_REALTIME_ANALYTICS=false
ENABLE_ADVANCED_AI_AGENTS=false
ENABLE_LEGACY_FALLBACK=true
ENABLE_PROGRESSIVE_ROLLOUT=true
ENABLE_COST_GUARDRAILS=true
ENABLE_HUMAN_IN_THE_LOOP=true

# Performance
MAX_CONCURRENT_ASSESSMENTS=10
REQUEST_TIMEOUT=30

# Monitoring
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability
DATADOG_API_KEY=<YOUR-REAL-DATADOG-KEY>
LF_ENV=production

# Error tracking
SENTRY_DSN=<YOUR-REAL-SENTRY-DSN>
SENTRY_TRACE_RATE=0.20